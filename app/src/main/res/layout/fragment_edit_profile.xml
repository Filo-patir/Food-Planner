<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.mainappfeatures.drawerfragments.EditProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:background="@drawable/camerabackground"
        android:padding="10dp"
        android:src="@drawable/camera_icon"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView2"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto"
        android:text="@string/usernametxt"
        android:textColor="@color/primary_color"
        android:textFontWeight="900"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/circleImageView2"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="@+id/circleImageView2"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView2" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/passtxt"
        android:textColor="@color/primary_color"
        android:textFontWeight="900"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/editProfileOldPasswordTxt"
        app:layout_constraintStart_toStartOf="@+id/editProfileOldPasswordTxt"
        app:layout_constraintTop_toBottomOf="@+id/editProfileOldPasswordTxt" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/old_passwordtxt"
        android:textColor="@color/primary_color"
        android:textFontWeight="900"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/editProfileNameTxt"
        app:layout_constraintStart_toStartOf="@+id/editProfileNameTxt"
        app:layout_constraintTop_toBottomOf="@+id/editProfileNameTxt" />

    <EditText
        android:id="@+id/editProfileNameTxt"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/roboto"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/secondary_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:text="Filo Mamdouh" />

    <EditText
        android:id="@+id/editProfileOldPasswordTxt"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/secondary_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        tools:text="........" />

    <EditText
        android:id="@+id/editProfilePasswordTxt"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/secondary_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:text="........" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/confirm_passtxt"
        android:textColor="@color/primary_color"
        android:textFontWeight="900"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/editProfilePasswordTxt"
        app:layout_constraintStart_toStartOf="@+id/editProfilePasswordTxt"
        app:layout_constraintTop_toBottomOf="@+id/editProfilePasswordTxt" />

    <EditText
        android:id="@+id/editProfileConfirmPasswordTxt"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:fontFamily="@font/roboto"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/secondary_color"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        tools:text="........" />

    <Button
        android:id="@+id/confrimEditProfileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/btn_secondary_color"
        android:text="@string/confirm"
        android:textColor="@color/surface"
        app:layout_constraintEnd_toEndOf="@+id/editProfileConfirmPasswordTxt"
        app:layout_constraintStart_toStartOf="@+id/editProfileConfirmPasswordTxt"
        app:layout_constraintTop_toBottomOf="@+id/editProfileConfirmPasswordTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>